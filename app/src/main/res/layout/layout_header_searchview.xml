<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_card_profile_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginBottom="32dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35"/>

    <ImageView
        android:id="@+id/iv_wonkainc_logo"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/wonkainc_logo"
        app:layout_constraintBottom_toTopOf="@+id/wdgSearchView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:contentDescription="Logo" />


    <SearchView
        android:id="@+id/wdgSearchView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginVertical="4dp"
        android:paddingVertical="8dp"
        android:queryHint="Search..."
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:iconifiedByDefault="false"
        android:background="@drawable/shape_background_searchview"
        app:layout_constraintEnd_toStartOf="@+id/tvCancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_wonkainc_logo" />

    <ImageView
        android:id="@+id/ivFilters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_filters"
        app:layout_constraintBottom_toBottomOf="@+id/wdgSearchView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvCancel"
        app:layout_constraintTop_toTopOf="@+id/wdgSearchView" />

    <TextView
        android:id="@+id/tvCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/action.cancel"
        android:textColor="@color/purpleAccent"
        android:textSize="16sp"
        android:layout_marginHorizontal="10dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/wdgSearchView"
        app:layout_constraintEnd_toStartOf="@+id/ivFilters"
        app:layout_constraintStart_toEndOf="@+id/wdgSearchView"
        app:layout_constraintTop_toTopOf="@+id/wdgSearchView" />


</androidx.constraintlayout.widget.ConstraintLayout>
