<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_card_profile_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginBottom="32dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circle_profile_image"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_marginVertical="4dp"
        android:layout_marginEnd="12dp"
        android:src="@drawable/profile_icon"
        app:civ_border_color="#FF000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvFullName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFullName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@id/tvWanityPoints"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/circle_profile_image"
        app:layout_constraintTop_toTopOf="@id/circle_profile_image"
        tools:text="EmployerName" />

    <TextView
        android:id="@+id/tvWanityPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/yellow_accent"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/tv_description"
        app:layout_constraintEnd_toEndOf="@id/iv_info"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/tvFullName"
        app:layout_constraintTop_toBottomOf="@id/tvFullName"
        tools:text="1250 Wanity points" />

    <ImageView
        android:id="@+id/iv_info"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginStart="4dp"
        android:visibility="gone"
        android:src="@drawable/ic_filters"
        app:layout_constraintBottom_toBottomOf="@+id/tvWanityPoints"
        app:layout_constraintStart_toEndOf="@id/tvWanityPoints"
        app:layout_constraintTop_toTopOf="@+id/tvWanityPoints" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/tvFullName"
        app:layout_constraintStart_toStartOf="@id/tvFullName"
        app:layout_constraintTop_toBottomOf="@id/tvWanityPoints"
        tools:text="Description..." />



</androidx.constraintlayout.widget.ConstraintLayout>
